# Frontend Environment Variables (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# JWT Secret (must match backend JWT_SECRET for authentication)
# Generate: https://generate-secret.vercel.app/32
JWT_SECRET=your-jwt-secret-here-32-characters

# Get your API key from https://openweathermap.org/api
NEXT_PUBLIC_OPENWEATHER_API_KEY=your-openweather-api-key

# Get your Gemini API key from https://makersuite.google.com/app/apikey
NEXT_PUBLIC_GEMINI_API_KEY=your-gemini-api-key

# Email Configuration (for sending emails via Gmail)
# Use App Password, not regular Gmail password
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# MongoDB Connection (local development)
MONGODB_URI=mongodb://localhost:27017/agrifin
